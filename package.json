{
  "name": "plug-n-dump",
  "version": "2.0.0",
  "description": "ECHO CORP FPV Tuning Nexus - Flight Controller Data Extraction Tool",
  "main": "main.js",
  "author": "ECHO CORP",
  "homepage": "https://echocorp.com",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win portable",
    "build-oneclick": "electron-builder --win nsis",
    "build-all": "electron-builder --win",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.echocorp.plugndump",
    "productName": "Plug-N-Dumpâ„¢ By Echo Corp.",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css",
      "*.png",
      "*.ico",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "Plug-N-Dump.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ECHO CORP Plug-N-Dump",
      "installerIcon": "Plug-N-Dump.ico",
      "uninstallerIcon": "Plug-N-Dump.ico",
      "installerHeader": "Plug-N-Dump.ico",
      "installerHeaderIcon": "Plug-N-Dump.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "ECHO CORP",
      "artifactName": "${productName}-OneClick-Setup-${version}.${ext}",
      "displayLanguageSelector": false,
      "installerLanguages": ["en_US"],
      "language": "2057"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "drivelist": "^12.0.2",
    "electron-updater": "^6.1.7",
    "serialport": "^13.0.0",
    "yargs": "^18.0.0"
  }
}
